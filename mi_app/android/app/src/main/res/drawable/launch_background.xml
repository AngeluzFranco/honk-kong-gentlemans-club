<?xml version="1.0" encoding="utf-8"?>
<!-- Modern splash screen with gradient background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#2563EB"
                android:centerColor="#3B82F6"
                android:endColor="#0EA5E9"
                android:type="linear" />
        </shape>
    </item>

    <!-- App icon in the center -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>
</layer-list>
